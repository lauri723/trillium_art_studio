                                        <td class="td-left"><label for="pickup">Click for in Person Pickup</label></td>
                                        <td class="td-right"><input type="checkbox" class="form-check-input mt-0" id="pickup" name="pickup"></td>
                                    </tr>
                                    <tr class="Order-total">
                                        <td class="td-left">Order Total</td>
                                        <td class="td-right">
                                            $<span id="order-total"><%= (subTotal + shippingTotal).toLocaleString(undefined, {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></span>

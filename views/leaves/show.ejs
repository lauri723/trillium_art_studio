<% layout('layouts/boilerplate')%>

<%- include('../partials/navbar')%>
<%- include('../partials/logo')%>

<!-- page with title, image and content -->
<% if(leaf.images.length > 0 && leaf.content.length > 1) {%>
<div class="container leaf-complete">
    <div class="card p-3 leaf-card">
        <!-- <div class="card-body"> -->
        <h3 class="card-title p-5"> <%= leaf.title %></h3>
        <hr>
        <!-- </div> -->
        <div id="leaf-content" class="p-5">
            <img class="img-fluid img-leaf wrapped" alt="" width="400" src="<%=leaf.images[0].url%>">
            <%- leaf.content %>
        </div>
    </div>
</div>
<!-- page with title and image/carousel -->
<% } else if(leaf.images.length > 0 && leaf.content.length < 1) {%>
<div class="container">
    <div class="card p-3 leaf-card">
        <h3 class="card-title p-5"> <%= leaf.title %></h3>
        <hr>
        <div id="carousel" class="carousel slide img-leaf-car" data-bs-ride="carousel">
            <div class="carousel-inner">
                <% leaf.images.forEach((image, i) => {  %>
                <div class="carousel-item <%= i === 0 ? 'active' : ''%>" data-bs-interval="3000">
                    <img src="<%= image.url%>" class="d-block w-100" alt="">
                </div>
                <% }) %>
            </div>
            <% if(leaf.images.length > 1) {%>
            <a class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev" style="opacity: .0;">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <!-- <span class="sr-only">Previous</span> -->
            </a>
            <a class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next" style="opacity: .0;">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <!-- <span class="sr-only">Next</span> -->
            </a>
            <% } %>
        </div>
    </div>
</div>
<!-- page with title and content -->
<% } else {%>
<div class="container">
    <div class="card p-3 leaf-card">
        <div class="card-body">
            <h3 class="card-title p-5"> <%= leaf.title %></h3>
            <hr>
        </div>
        <div class="card-body px-5">
            <p class="card-text description"><%- leaf.content %></p>
            <hr>
        </div>
    </div>
</div>
<% } %>


<%- include('../partials/footer')%>